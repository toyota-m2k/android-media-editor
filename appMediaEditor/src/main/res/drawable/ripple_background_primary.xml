        <shape android:shape="rectangle">
            <solid android:color="#80000000" /> <!-- 通常時の背景色 -->
            <corners android:radius="3dp" />    <!-- 角丸(任意) -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorPrimary" /> <!-- 通常時の背景色 -->
            <corners android:radius="3dp" />    <!-- 角丸(任意) -->
        </shape>
    </item>
</ripple>
