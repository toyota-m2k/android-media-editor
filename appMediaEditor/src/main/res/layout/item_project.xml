<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_list_item_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:id="@+id/type_icons"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:id="@+id/type_video_icon"
            android:src="@drawable/ic_type_video"
            app:tint="?attr/colorTertiary"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:id="@+id/type_photo_icon"
            android:src="@drawable/ic_type_photo"
            app:tint="?attr/colorPrimary"
            />
    </FrameLayout>

    <ImageButton
        android:id="@+id/trash_button"
        style="@style/Widget.Material3.Button.IconButton.Filled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:tint="?attr/colorSecondary"
        android:src="@drawable/ic_trash"
        />

    <TextView
        android:id="@+id/name_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/type_icons"
        app:layout_constraintEnd_toStartOf="@+id/trash_button"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="xxxx"
        android:textColor="?attr/colorOnSurface"
        />
    <TextView
        android:id="@+id/sub_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/type_icons"
        app:layout_constraintTop_toBottomOf="@id/name_text"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="yyy"
        android:textColor="?attr/colorOnSurfaceVariant"
        />
</androidx.constraintlayout.widget.ConstraintLayout>